import subprocess
import pickle
import requests

DB_PASSWORD = "admin123"   # Hardcoded secret ❌

def run_backup(user_input):
    # Command Injection ❌
    subprocess.call("backup.sh " + user_input, shell=True)

def load_cache(data):
    # Insecure deserialization ❌
    return pickle.loads(data)

def fetch_profile(user_id):
    url = f"https://api.service.com/user/{user_id}"
    return requests.get(url).text   # No timeout / no validation ❌
